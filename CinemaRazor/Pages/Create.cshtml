@page
@model CinemaRazor.Pages.CreateModel
@{
}

<div style="margin:auto; width: 800px; padding: 5px; border-radius: 10px;height:45px;">
    <h2 style="color: #FF7373; font-style:italic">Добавить фильм</h2>
</div>
@* <h4>Kino</h4> *@

<div id="creat_div">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label style="color: #FF7373;font-style:italic; font-size:20px;font-weight:800">Название:</label>
                <input asp-for="kino.Title" class="form-control" style="background-color:#c7c7c7" />
                <span asp-validation-for="kino.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="color: #FF7373;font-style:italic; font-size:20px;font-weight:800">Жанр:</label>
                <input asp-for="kino.Genre" class="form-control" style="background-color:#c7c7c7" />
                <span asp-validation-for="kino.Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="color: #FF7373;font-style:italic; font-size:20px;font-weight:800">Режиссёр:</label>
                <input asp-for="kino.Director" class="form-control" style="background-color:#c7c7c7" />
                <span asp-validation-for="kino.Director" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="color: #FF7373;font-style:italic; font-size:20px;font-weight:800">Краткое описание:</label>
                <input asp-for="kino.Description" class="form-control" style="background-color:#c7c7c7" />
                <span asp-validation-for="kino.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="color: #FF7373;font-style:italic; font-size:20px;font-weight:800">Постер</label>
                @* <input asp-for="Poster" class="form-control " style="background-color:#c7c7c7" />
                <span asp-validation-for="Poster" class="text-danger"></span> *@
            </div>

            <input type="file" name="uploadedFile" asp-for="kino.Poster" style="color:red" />


            <div class="form-group" style="margin-top:30px">

                <input type="submit" value="Добавить" class="btn btn-primary" style="background-color:#240e67; border: none " />
            </div>
        </form>
    </div>
</div>

<div style="margin:auto; width: 800px; padding: 5px;background-color:#240e67; border-radius: 10px;margin-top:25px;height:45px; box-shadow: 4px 8px 8px rgba(124,9, 186, 0.5);">
    <a asp-page="Index" style="float: right; color: #FF7373; text-decoration: none;font-size:20px;font-style:italic; font-weight:800">Назад в галерею</a>
</div>
